{
  "name": "elio-os",
  "version": "3.2.0",
  "description": "Elio OS - AI Operating System",
  "private": true,
  "scripts": {
    "build": "pnpm -r build",
    "build:workflow": "pnpm --filter @elio/workflow build",
    "build:agent-runner": "pnpm --filter @elio/agent-runner build",
    "build:worker": "pnpm --filter @elio/worker build",
    "clean": "pnpm -r clean",
    "dev": "pnpm -r dev",
    "dev:worker": "pnpm --filter @elio/worker dev",
    "typecheck": "pnpm -r typecheck",
    "test": "pnpm -r test",
    "test:integration": "pnpm --filter @elio/workflow test:integration",
    "health": "npx tsx scripts/health-check.ts",
    "verify": "pnpm build && pnpm test:integration && pnpm health",
    "worker:start": "docker compose up -d redis && pnpm --filter @elio/worker start",
    "deploy": "bash scripts/deploy.sh",
    "deploy:quick": "bash scripts/deploy.sh --skip-push",
    "deploy:mcp": "bash scripts/update-mcp.sh",
    "ship": "bash scripts/ship.sh",
    "codegen:registry": "tsx scripts/codegen-registry.ts",
    "validate:registry": "bash scripts/lint-registry.sh",
    "validate:schema": "ajv-cli validate -s registry.schema.json -d registry.yaml",
    "drift:detect": "tsx scripts/detect-registry-drift.ts",
    "registry:check": "pnpm validate:schema && pnpm validate:registry && pnpm drift:detect"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "tsx": "^4.0.0",
    "typescript": "^5.9.3",
    "vitest": "^2.0.0"
  },
  "packageManager": "pnpm@9.0.0",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "croner": "^9.0.0",
    "yaml": "^2.8.2"
  }
}
